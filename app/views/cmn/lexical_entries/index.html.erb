<% content_for :resources_header do %>
  <div class="col-md-3">
    <div class="btn-group collection-action" role="group">
      <button id="destroy-multiple" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
        Destroy
      </button>
      <button id="edit-multiple" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
      </button>
    </div>
  </div>

  <div class="col-md-6">
    <%= form_tag lexicon_lexical_entries_path(@lexicon), method: :get do %>
      <div class="input-group">
        <%= text_field_tag :q, @query, class: 'form-control', autofocus: true %>
        <span class="input-group-btn">
          <%= content_tag :button, type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            Search
          <% end %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-md-3">
    <div class="btn-group" role="group">
      <%= link_to new_lexicon_lexical_entries_path(@lexicon), class: 'btn btn-success' do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
      <% end %>
      <%= link_to quick_new_lexicon_lexical_entries_path(@lexicon), class: 'btn btn-default' do %>
        Create Mode
      <% end %>
    </div>
  </div>

<% end %>

<%= flash_messages %>

<%= render partial: 'list', locals: {lexicon: @lexicon, lexical_entries: @lexical_entries, checkboxes: true} %>
