<div class="row">
  <div class="col-md-2">
    <%= link_to lexical_entry_path(@lexical_entry), class: "link" do %>
      <span aria-hidden="true">&larr;</span>
      Back
    <% end %>
  </div>

  <div class="col-md-10">
    <div class="btn-group" role="group" style="float: right;">
      <%= link_to edit_sense_path(@lexical_entry), class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
      <% end %>
      <%= link_to sense_path(@lexical_entry), method: :delete, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
        Delete
      <% end %>
    </div>
  </div>
</div>

<br />

<div class="row">
  <div class="col-md-12">
    <h1>
      <span><%= cmn_lemma(@lexical_entry) %></span>
      <small>
        <span class="label label-success"><%= @lexical_entry.part_of_speech %></span>
        <span class="label label-info"><%= @lexical_entry.lexical_entry_type %></span>
      </small>
    </h1>
    <h3>
      <%= @sense.description %>
    </h3>
  </div>
</div>

<hr />

<div class="row">
  <div class="col-md-12">
    <h3>
      Examples
      <%= link_to edit_sense_examples_path(@sense), class: 'btn btn-default', style: "float: right;" do %>
        <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
        Select Sentences
      <% end %>
    </h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">

    <ol class="list-group">
      <% for sentence in @sense.sentences %>
        <li class="list-group-item">
          <%= sentence.simplified %>
        </li>
      <% end %>
    </ol>

  </div>
</div>
