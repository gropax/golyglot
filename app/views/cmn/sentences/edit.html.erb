<% nav :sentences %>

<h1>Edit Sentence</h1>

<%= bootstrap_form_for @sentence, as: :sentence do |f| %>
  <%= f.text_field :simplified %>
  <%= f.text_field :traditional %>
  <%= f.text_field :pinyin %>
  <%= f.submit "Update", class: 'btn btn-success' %>
  <%= link_to "Cancel", sentence_path(@sentence), class: 'btn btn-default' %>
<% end %>
