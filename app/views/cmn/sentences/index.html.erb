<% nav :sentences, :search %>

<% content_for :resources_header do %>
  <div class="col-md-3 text-center">
    <!-- Split button -->
    <div class="btn-group collection-action">
      <button id="select-multiple" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span>
        Add to Selection
      </button>

      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>

      <ul class="dropdown-menu">
        <li>
          <a id="destroy-multiple" href="">
            <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
            Delete
          </a>
        </li>
        <li>
          <a id="edit-multiple" href="">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit
          </a>
        </li>
      </ul>
    </div>

  </div>

  <div class="col-md-7">
    <%= form_tag lexicon_sentences_path(@lexicon), method: :get do %>
      <div class="input-group">
        <%= text_field_tag :q, @query, class: 'form-control', autofocus: true %>
        <span class="input-group-btn">
          <%= content_tag :button, type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            Search
          <% end %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-md-2">
    <%= link_to new_lexicon_sentences_path(@lexicon), class: 'btn btn-success' do %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      New
    <% end %>
  </div>

<% end %>

<%= flash_messages %>

<%= render partial: 'list', locals: {lexicon: @lexicon, sentences: @sentences, checkboxes: true} %>

