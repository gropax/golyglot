<% nav :sentences, :selection %>

<% content_for :resources_header do %>
  <div class="col-md-10">
    <!-- Collection actions button -->
    <div class="btn-group collection-action">
      <button id="deselect-multiple" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        Remove from Selection
      </button>

      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>

      <ul class="dropdown-menu">
        <li>
          <a id="destroy-multiple" href="">
            <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
            Delete
          </a>
        </li>
        <li>
          <a id="edit-multiple" href="">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit
          </a>
        </li>
      </ul>
    </div>

    <!-- Download Button -->
    <div class="btn-group">
      <%= link_to lexicon_sentence_selection_path(@lexicon, format: :csv), class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-download" aria-hidden="true"></span>
        Download .csv
      <% end %>

      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>

      <ul class="dropdown-menu">
        <li>
          <a id="select-multiple" href="">
            Download .xls
          </a>
        </li>
      </ul>
    </div>

  </div>

  <div class="col-md-2">
    <%= link_to clear_lexicon_sentence_selection_path(@lexicon), method: :post, class: "btn btn-danger" do %>
      <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
      Clear
    <% end %>
  </div>

<% end %>

<% if @selection.action? %>

  <%= form_tag @selection.action.url do %>
    <div class="alert alert-warning" role="alert">
      The selection is currently used to collect <%= @selection.action.message %>

      <% for sentence in @sentences %>
        <%= hidden_field_tag "sentence_ids[]", sentence.id %>
      <% end %>

      <div class="btn-group pull-right">
        <button type="submit" class="btn btn-warning">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          Update
        </button>

        <%= link_to "Cancel", clear_lexicon_sentence_selection_path(@lexicon), method: :delete, class: "btn btn-default" %>
      </div>

    </div>
  <% end %>
  
  <hr />
<% end %>



<%= flash_messages %>

<% if @sentences.empty? %>
  <h3>Selection is empty</h3>
<% else %>
  <%= render partial: 'list', locals: {lexicon: @lexicon, sentences: @sentences, checkboxes: true} %>
<% end %>
