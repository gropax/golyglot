<% nav :sentences %>

<div class="row">
  <div class="col-md-2">
    <%= link_to previous_sentence_collection_path, class: "link" do %>
      <span aria-hidden="true">&larr;</span>
      Back
    <% end %>
  </div>

  <div class="col-md-10">
    <div class="btn-group" role="group" style="float: right;">
      <%= link_to edit_sentence_path(@sentence), class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
      <% end %>
      <%= link_to sentence_path(@sentence), method: :delete, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
        Delete
      <% end %>
    </div>
  </div>
</div>

<br />

<div class="row">
  <div class="col-md-12">
    <h1>
      <span><%= @sentence.simplified %></span>
    </h1>
  </div>
</div>
