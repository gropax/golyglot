<!DOCTYPE html>
<html>
<head>
  <title>GolyglotServer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render "shared/header" %>

  <div class="container">
    <% if content_for? :content %>
      <%= yield :content %>
    <% else %>
      <%= flash_messages %>
      <%= yield %>
    <% end %>
  </div>

  <%= insert_paloma_hook %>

</body>
</html>
